<UserControl x:Class="Automat.Plugins.CheckInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Automat.Plugins" d:DataContext="{d:DesignInstance Type=local:CheckInputField}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <CheckBox IsChecked="{Binding Value}" VerticalAlignment="Center" BorderThickness="0.5" BorderBrush="#FFABADB3"/>
</UserControl>
